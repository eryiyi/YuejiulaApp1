<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:orientation="horizontal"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:background="@drawable/zhuye_item_select">

    <LinearLayout android:layout_width="120dp"
                  android:padding="5dp"
                  android:id="@+id/pic_liner"
                  android:layout_height="100dp">
        <ImageView android:layout_width="120dp"
                   android:id="@+id/item_news_pic"
                   android:scaleType="center"
                   android:layout_height="100dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="搞笑越难版《上海滩》，字母太搞笑了"
                android:textSize="16sp"
                android:textColor="#333333"
                android:id="@+id/item_news_title"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2015-10-20 "
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:gravity="center|right"
                android:id="@+id/item_news_date"/>

    </LinearLayout>

</LinearLayout>


