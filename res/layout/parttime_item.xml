<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="10dp"
              android:background="@drawable/zhuye_item_select">
        <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginRight="10dp"
                android:id="@+id/parttime_item_cover"
                />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:id="@+id/searchLayout"
            >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    android:id="@+id/parttime_item_title"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20151515"
                    android:layout_marginLeft="8dp"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:gravity="right"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/textColortwo"
                    android:layout_alignParentRight="true"
                    android:id="@+id/parttime_item_dateline"/>
            </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cont"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/textColortwo"
                android:id="@+id/parttime_item_cont"/>
    </LinearLayout>

</LinearLayout>


