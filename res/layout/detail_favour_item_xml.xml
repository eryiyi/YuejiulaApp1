<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="8dp"
                android:layout_height="wrap_content">
    <com.liangxun.yuejiula.widget.CircleImageView
            android:layout_width="40dp"
            android:src="@drawable/head"
            android:id="@+id/detail_favour_item_cover"
            android:layout_height="40dp"/>
    <TextView android:layout_width="match_parent"
              android:text="昵称"
              android:layout_toRightOf="@+id/detail_favour_item_cover"
              android:layout_marginLeft="10dp"
              android:textSize="16sp"
              android:textColor="@color/textColor"
              android:gravity="center_vertical"
              android:id="@+id/detail_favour_item_nickname"
              android:layout_height="40dp"/>
    <TextView android:layout_width="wrap_content"
              android:text="2015"
              android:textSize="14sp"
              android:gravity="center_vertical"
              android:layout_alignParentRight="true"
              android:textColor="@color/textColortwo"
              android:id="@+id/detail_favour_item_dateline"
              android:layout_height="40dp"/>
</RelativeLayout>