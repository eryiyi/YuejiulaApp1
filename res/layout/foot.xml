<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@drawable/foot_background"
              android:layout_height="60dp"
              android:orientation="vertical">

    <View android:layout_width="match_parent"
          android:background="@color/transparent2"
          android:layout_height="1px"/>

    <LinearLayout android:layout_width="match_parent"
                  android:paddingTop="3dp"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/foot_one"
                   android:src="@drawable/foot_index"
                   android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/foot_two"
                       android:layout_centerInParent="true"
                       android:src="@drawable/foot_paopao"
                       android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/unread_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/unread_count_bg"
                        android:gravity="center"
                        android:text="7"
                        android:visibility="gone"
                        android:layout_alignRight="@+id/foot_two"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        />
        </RelativeLayout>

        <ImageView android:layout_width="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/foot_three"
                   android:src="@drawable/foot_cart"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/foot_four"
                   android:src="@drawable/foot_find"
                   android:layout_height="wrap_content"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/foot_five"
                   android:src="@drawable/foot_mine"
                   android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>