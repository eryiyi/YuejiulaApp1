<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/main"
              android:background="@color/white"
              android:orientation="vertical">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/global_top_background">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="个人档"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
        </LinearLayout>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/profile_personal_back"
                android:paddingLeft="10dp"
                android:src="@drawable/back"
                android:paddingRight="10dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/select_fenghq"
                android:paddingLeft="10dp"
                android:src="@drawable/abv"
                android:paddingRight="10dp"/>
        <TextView android:layout_width="wrap_content"
                   android:text="设为代理"
                   android:visibility="gone"
                   android:textColor="@color/textColor"
                   android:layout_alignParentRight="true"
                   android:padding="12dp"
                   android:id="@+id/btn_set_dl"
                   android:layout_marginRight="8dp"
                   android:layout_centerVertical="true"
                   android:layout_height="wrap_content"/>
    </RelativeLayout>
    <!--head结束-->
    <com.liangxun.yuejiula.widget.ReboundScrollView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_two"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">
                <com.liangxun.yuejiula.widget.CircleImageView
                        android:layout_width="80dp"
                        android:src="@drawable/head"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/profile_personal_cover"
                        android:layout_height="80dp"/>
                <ImageView android:layout_width="wrap_content"
                           android:id="@+id/profile_personal_sex"
                           android:layout_margin="3dp"
                           android:layout_toRightOf="@+id/profile_personal_cover"
                           android:layout_alignBottom="@+id/profile_personal_cover"
                           android:src="@drawable/icon_sex_female"
                           android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:id="@+id/profile_personal_flag"
                           android:layout_margin="3dp"
                           android:layout_toRightOf="@+id/profile_personal_sex"
                           android:layout_alignBottom="@+id/profile_personal_cover"
                           android:src="@drawable/icon_type_min"
                           android:layout_height="wrap_content"/>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_alignBottom="@+id/profile_personal_cover"
                              android:layout_toRightOf="@+id/profile_personal_flag"
                              android:orientation="horizontal"
                              android:layout_height="wrap_content">
                    <ImageView android:layout_width="wrap_content"
                               android:id="@+id/biaozhi_one"
                               android:visibility="gone"
                               android:layout_margin="3dp"
                               android:src="@drawable/icon_fengtie"
                               android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="wrap_content"
                               android:id="@+id/biaozhi_two"
                               android:visibility="gone"
                               android:layout_margin="3dp"
                               android:src="@drawable/icon_fengqun"
                               android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginTop="5dp"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <View android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:background="#e9e9e9"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="10dp"
                              android:padding="10dp"
                              android:paddingRight="10dp"
                              android:paddingTop="5dp"
                              android:paddingBottom="5dp">
                    <ImageView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:src="@drawable/part_type_person"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:gravity="left"
                              android:singleLine="true"
                              android:textColor="@color/white"
                              android:textSize="14sp"
                              android:id="@+id/profile_personal_nickname"/>
                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:background="#e9e9e9"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="10dp"
                              android:padding="10dp"
                              android:paddingRight="10dp"
                              android:paddingTop="5dp"
                              android:paddingBottom="5dp">
                    <ImageView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:src="@drawable/part_type_persons"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:gravity="left"
                              android:singleLine="true"
                              android:textColor="@color/white"
                              android:textSize="14sp"
                              android:id="@+id/profile_personal_school"/>
                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:background="#e9e9e9"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="10dp"
                              android:paddingRight="10dp"
                              android:padding="10dp"
                              android:paddingTop="5dp"
                              android:paddingBottom="5dp">
                    <ImageView android:layout_width="wrap_content"
                               android:src="@drawable/part_type_qq"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              />

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:gravity="left"
                              android:singleLine="true"
                              android:textColor="@color/white"
                              android:textSize="14sp"
                              android:id="@+id/profile_personal_qq"/>
                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:id="@+id/mobile_status_liner_line"
                      android:background="#e9e9e9"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:padding="10dp"
                              android:gravity="center_vertical"
                              android:paddingLeft="10dp"
                              android:paddingRight="10dp"
                              android:paddingTop="5dp"
                              android:id="@+id/mobile_status_liner"
                              android:paddingBottom="5dp">
                    <ImageView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:src="@drawable/part_type_tel"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:gravity="left"
                              android:singleLine="true"
                              android:textColor="@color/white"
                              android:textSize="14sp"
                              android:id="@+id/profile_personal_mobile"/>
                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:background="#e9e9e9"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="10dp"
                              android:paddingRight="10dp"
                              android:paddingTop="5dp"
                              android:padding="10dp"
                              android:paddingBottom="5dp">
                    <ImageView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:src="@drawable/part_type_moneyt"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:gravity="left"
                              android:singleLine="true"
                              android:textColor="@color/white"
                              android:textSize="14sp"
                              android:id="@+id/profile_count"/>
                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:background="#e9e9e9"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="10dp"
                              android:padding="10dp"
                              android:paddingRight="10dp"
                              android:paddingTop="5dp"
                              android:paddingBottom="5dp">
                    <ImageView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10dp"
                              android:src="@drawable/part_type_title"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:gravity="left"
                              android:singleLine="true"
                              android:textColor="@color/white"
                              android:textSize="14sp"
                              android:id="@+id/profile_dengji"/>
                </LinearLayout>

                <View android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:background="#e9e9e9"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:paddingLeft="10dp"
                              android:paddingRight="10dp"
                              android:paddingTop="5dp"
                              android:padding="10dp"
                              android:paddingBottom="5dp">
                    <ImageView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:src="@drawable/part_type_detail"
                              android:layout_marginLeft="10dp"
                              />

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:gravity="left"
                              android:text="青春无悔，童心堂"
                              android:textColor="@color/white"
                              android:textSize="14sp"
                              android:id="@+id/profile_sign"/>
                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:background="#e9e9e9"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              android:id="@+id/profile_record"
                              android:paddingLeft="10dp"
                              android:paddingRight="10dp"
                              android:paddingTop="1dp"
                              android:padding="3dp"
                              android:paddingBottom="1dp">
                    <ImageView android:layout_width="45dp"
                               android:layout_height="45dp"
                               android:src="@drawable/icons_others_recent"
                               android:id="@+id/profile_dynamic"
                               android:layout_marginLeft="10dp"
                               android:padding="8dp"
                            />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:layout_gravity="center"
                              android:paddingLeft="30dp"
                              android:text="个人动态"
                              android:textColor="@color/white"
                              android:textSize="14sp"
                            />
                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="0.5dp"
                      android:background="#e9e9e9"/>
                <!--<LinearLayout android:layout_width="match_parent"-->
                              <!--android:layout_height="wrap_content"-->
                              <!--android:visibility="gone"-->
                              <!--android:orientation="horizontal"-->
                              <!--android:background="@drawable/zhuye_item_select"-->
                              <!--android:gravity="center_vertical"-->
                              <!--android:id="@+id/profile_paimai"-->
                              <!--android:paddingLeft="10dp"-->
                              <!--android:paddingRight="10dp"-->
                              <!--android:paddingTop="1dp"-->
                              <!--android:padding="3dp"-->
                              <!--android:paddingBottom="1dp">-->
                    <!--<ImageView android:layout_width="45dp"-->
                               <!--android:layout_height="45dp"-->
                               <!--android:src="@drawable/icons_others_paimai"-->
                               <!--android:id="@+id/profile_paimai_img"-->
                               <!--android:layout_marginLeft="10dp"-->
                               <!--android:padding="8dp"-->
                            <!--/>-->
                    <!--<TextView android:layout_width="wrap_content"-->
                              <!--android:layout_height="wrap_content"-->
                              <!--android:layout_weight="2"-->
                              <!--android:layout_gravity="center"-->
                              <!--android:paddingLeft="30dp"-->
                              <!--android:text="个人拍卖"-->
                              <!--android:textColor="@color/red"-->
                              <!--android:textSize="14sp"-->
                            <!--/>-->
                <!--</LinearLayout>-->

            </LinearLayout>

        </LinearLayout>
    </com.liangxun.yuejiula.widget.ReboundScrollView>
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e9e9e9"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:gravity="center"
                  android:background="#ffffff">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:clickable="true"
                      android:onClick="chat"
                      android:background="@drawable/zhuye_item_select">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/icon_little_h_comment"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="私聊"
                      android:textSize="14sp"
                      android:textColor="@color/profile_font_color"
                      android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <ImageView android:layout_width="0.5dp"
                   android:layout_height="20dp"
                   android:background="#e9e9e9"
                   android:layout_margin="3dp"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:onClick="report"
                      android:clickable="true"
                      android:background="@drawable/zhuye_item_select">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/icon_little_h_hollow"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="举报"
                      android:textSize="14sp"
                      android:textColor="@color/profile_font_color"
                      android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <ImageView android:layout_width="0.5dp"
                   android:layout_height="20dp"
                   android:background="#e9e9e9"
                   android:layout_margin="3dp"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:clickable="true"
                      android:onClick="add"
                      android:background="@drawable/zhuye_item_select">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/icon_little_h_addfriend"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="加好友"
                      android:textSize="14sp"
                      android:textColor="@color/profile_font_color"
                      android:layout_marginLeft="5dp"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>