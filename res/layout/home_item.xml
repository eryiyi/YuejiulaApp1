<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/zhuye_item_select"
                android:layout_height="wrap_content">

    <com.liangxun.yuejiula.widget.CircleImageView
            android:layout_width="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/head"
            android:id="@+id/home_viewed_item_cover"
            android:layout_height="50dp"/>

    <TextView
            android:id="@+id/home_viewed_item_name"
            android:layout_width="wrap_content"
            android:layout_marginRight="88dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/home_viewed_item_cover"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="7"
            android:text="令狐冲"/>

    <TextView
            android:id="@+id/home_viewed_item_time"
            android:layout_width="75dp"
            android:text="20天之前"
            android:layout_marginRight="15dp"
            android:gravity="center|right"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:textColor="@color/textColortwo"
            android:textSize="13sp"/>

    <TextView
            android:id="@+id/home_item_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/home_viewed_item_cover"
            android:textSize="13sp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/home_viewed_item_name"
            android:textColor="@color/textColortwo"
            android:text="滨州学院"
            android:drawablePadding="8dip"/>
    <TextView
            android:id="@+id/home_item_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="--zanlaoban"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/home_item_school"
            android:textSize="13sp"
            android:layout_below="@+id/home_viewed_item_name"
            android:textColor="@color/textColortwo"
            android:drawablePadding="8dip"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
              android:id="@+id/home_viewed_item_cont"
              android:textSize="16dp"
              android:paddingTop="12dp"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:layout_below="@+id/home_viewed_item_cover"
              android:ellipsize="end"
              android:singleLine="false"
              android:maxLines="3"
              android:lineSpacingExtra="3dp"
              android:textColor="@color/textColor"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/img_relate"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_below="@+id/home_viewed_item_cont"
                    android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/home_photo_item_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:layout_centerHorizontal="true"/>
        <com.liangxun.yuejiula.widget.PictureGridview
                android:id="@+id/gridview_detail_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:horizontalSpacing="4dip"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="4dip"
                android:padding="4dip"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:paddingTop="12dp"
                        android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/home_photo_item_photo_video"
                    android:layout_width="match_parent"
                    android:src="@drawable/pic_none"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:minHeight="200dp"
                    android:layout_centerHorizontal="true"/>
            <ImageView
                    android:id="@+id/home_player_icon_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_home_play"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:background="@color/liner_divider"
          android:layout_marginTop="8dp"
          android:layout_below="@+id/img_relate"
          android:id="@+id/line_bottom"
          android:layout_height="1px"></View>

    <TextView
            android:id="@+id/home_photo_item_level"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_bottom"
            android:drawableLeft="@drawable/icon_little_rank"
            android:ellipsize="end"
            android:gravity="center|left"
            android:singleLine="true"
            android:textColor="@color/textColortwo"
            android:text="出入"
            android:drawablePadding="6dp"
            android:textSize="14sp"/>


    <TextView
            android:id="@+id/home_photo_item_delete"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_bottom"
            android:drawableLeft="@drawable/icon_little_h_trash"
            android:ellipsize="end"
            android:layout_marginLeft="25dp"
            android:gravity="center|left"
            android:singleLine="true"
            android:textColor="@color/textColortwo"
            android:text="删除"
            android:visibility="gone"
            android:drawablePadding="6dp"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/home_photo_item_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_bottom"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/icon_little_h_comment"
            android:textColor="@color/textColortwo"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="10000000"
            android:textSize="14sp"
            android:ellipsize="end"
            android:gravity="center|left"/>

    <TextView
            android:id="@+id/home_photo_item_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line_bottom"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/icon_little_h_good"
            android:textColor="@color/textColortwo"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="10000000"
            android:layout_marginRight="25dp"
            android:textSize="14sp"
            android:ellipsize="end"
            android:gravity="center|left"/>
</RelativeLayout>