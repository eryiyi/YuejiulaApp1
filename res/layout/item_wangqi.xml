<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/zhuye_item_select"
              android:padding="8dp"
              android:orientation="horizontal">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:padding="5dp"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="第一期"
                  android:id="@+id/item_datenumber"
                  android:singleLine="true"
                  android:textSize="16sp"
                  android:textColor="@color/textColor"
                  android:layout_height="wrap_content"/>
         <TextView android:layout_width="wrap_content"
                  android:text="2015-20525"
                  android:layout_weight="1.0"
                  android:id="@+id/item_dateline"
                  android:gravity="right"
                  android:singleLine="true"
                  android:textSize="15sp"
                  android:textColor="@color/textColortwo"
                  android:layout_height="wrap_content"/>
            </LinearLayout>
        <TextView android:layout_width="match_parent"
                  android:textColor="@color/textColortwo"
                  android:textSize="12sp"
                  android:id="@+id/item_cont"
                  android:layout_marginTop="5dp"
                  android:text="4564321145643212sadfdsdfsdfssfdsfsfasd"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>