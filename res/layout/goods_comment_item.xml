<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:background="@drawable/zhuye_item_select">
    <!-- 最右 -->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="35dp">
            <com.liangxun.yuejiula.widget.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/goods_comment_cover"
                    android:src="@drawable/ic_launcher"/>

        </RelativeLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginLeft="10dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="14sp"
                      android:text="1232"
                      android:textColor="@color/textColor"
                      android:id="@+id/goods_comment_nickname"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="12sp"
                      android:text="123"
                      android:id="@+id/goods_comment_dateline"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="1#"
                      android:id="@+id/floor_comment"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="10dp"
                  android:layout_weight="1"
            >
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="评论人"
                      android:paddingTop="3dp"
                      android:textSize="14sp"
                      android:textColor="#6db4e8"
                      android:visibility="gone"
                      android:id="@+id/comment_f_nickname"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/comment_f_nickname"
                    android:textSize="14sp"
                    android:textColor="@color/textColor"
                    android:paddingTop="3dp"
                    android:id="@+id/goods_comment_cont"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>