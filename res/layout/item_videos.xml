<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:background="@drawable/zhuye_item_select"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="10dp"
                    android:text="biaoti"
                    android:id="@+id/item_title"
                    android:textColor="@color/textColor"
                    android:textSize="16dp"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/item_pic"
                        android:src="@drawable/pic_none"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:id="@+id/item_play"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_home_play"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                <TextView
                        android:id="@+id/item_favour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:text="23 点赞"
                        android:textColor="@color/light_gray"
                        android:textSize="13sp" />

                <TextView
                        android:id="@+id/dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/item_favour"
                        android:text="·" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/dot2"
                        android:text="7 评论"
                        android:id="@+id/item_comment"
                        android:textColor="@color/light_gray"
                        android:textSize="13sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="12月12日"
                        android:id="@+id/item_dateline"
                        android:textColor="@color/light_gray"
                        android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:id="@+id/item_favour_btn"
                        android:layout_marginRight="13dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/video_list_good"
                        android:layout_marginLeft="10dp"/>

                <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginRight="13dp"
                        android:id="@+id/item_comment_btn"
                        android:scaleType="fitCenter"
                        android:src="@drawable/video_list_comment" />

                <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginRight="13dp"
                        android:scaleType="fitCenter"
                        android:id="@+id/item_share_btn"
                        android:src="@drawable/video_list_share" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>