<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f7f7f7"
              android:id="@+id/main"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@drawable/global_top_background">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:id="@+id/title"
                    android:text="约酒啦市场"
                    android:textColor="@color/title_font_main"
                    android:textSize="18sp"/>
        </LinearLayout>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/news_back_menu"
                android:paddingLeft="10dp"
                android:src="@drawable/back"
                android:paddingRight="10dp"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:src="@drawable/add_more"
                   android:layout_alignParentRight="true"
                   android:paddingLeft="10dp"
                   android:paddingRight="15dp"
                   android:id="@+id/news_addmore"/>
    </RelativeLayout>

    <com.liangxun.yuejiula.widget.ContentListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goodslstv"
            android:divider="#00d1d1d1"
            android:scrollingCache="false"
            android:fadingEdge="none"
            android:dividerHeight="1dp"
            />

</LinearLayout>