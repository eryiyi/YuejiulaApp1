<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@drawable/global_top_background">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="关于童心堂"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
        </LinearLayout>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/set_back"
                android:paddingLeft="10dp"
                android:src="@drawable/back"
                android:paddingRight="10dp"/>
    </RelativeLayout>
    <com.liangxun.yuejiula.widget.ReboundScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="45dp"
                >
            <ImageView android:layout_width="90dp"
                       android:layout_height="90dp"
                       android:layout_centerHorizontal="true"
                       android:id="@+id/tubiao"
                       android:src="@drawable/ic_launcher"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/biaoti"
                      android:paddingTop="25dp"
                      android:text="关爱老年人，就在童心堂 "
                      android:layout_below="@+id/tubiao"
                      android:textSize="15dp"
                      android:layout_centerHorizontal="true"
                      android:textColor="@color/black_deep"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingTop="5dp"
                      android:id="@+id/banben"
                      android:text="版本号"
                      android:layout_below="@+id/biaoti"
                      android:textSize="12dp"
                      android:layout_centerHorizontal="true"
                      android:textColor="@color/textColortwo"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/zongjie"
                      android:paddingTop="50dp"
                      android:text=""
                      android:textSize="16dp"
                      android:layout_below="@+id/banben"
                      android:layout_centerHorizontal="true"
                      android:textColor="@color/black_deep"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/jieshao1"
                      android:paddingTop="10dp"
                      android:textSize="12dp"
                      android:layout_below="@+id/zongjie"
                      android:layout_centerHorizontal="true"
                      android:textColor="@color/textColortwo"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/jieshao2"
                      android:paddingTop="5dp"
                      android:textSize="12dp"
                      android:layout_below="@+id/jieshao1"
                      android:layout_centerHorizontal="true"
                      android:textColor="@color/textColortwo"
                    />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/gaikuo"
                          android:layout_below="@+id/jieshao2"
                          android:paddingLeft="30dp"
                          android:paddingRight="30dp"
                          android:paddingTop="55dp"
                          android:background="#ffffff">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:gravity="center"
                              android:background="@drawable/zhuye_item_select"
                              android:clickable="true"
                              android:id="@+id/detail_goods_delete">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="14dp"
                              android:visibility="gone"
                              android:id="@+id/coalition"
                              android:clickable="true"
                              android:textColor="@color/btn_blue_normal"
                              android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <ImageView android:layout_width="0.5dp"
                           android:layout_height="20dp"
                           android:visibility="gone"
                           android:background="#d1d1d1"
                           android:layout_margin="0.5dp"/>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:gravity="center"
                              android:layout_weight="1"
                              android:background="@drawable/zhuye_item_select"
                              android:clickable="true"
                              android:id="@+id/detail_goods_top">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="14dp"
                              android:visibility="gone"
                              android:clickable="true"
                              android:id="@+id/user_protocol"
                              android:textColor="@color/btn_blue_normal"
                              android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/name"
                      android:layout_below="@+id/gaikuo"
                      android:textSize="12dp"
                      android:paddingTop="50dp"
                      android:layout_centerHorizontal="true"
                      android:textColor="@color/black_deep"
                      android:layout_alignParentBottom="true"
                      android:gravity="bottom"
                      android:text="童心堂版权所有"
                    />
        </RelativeLayout>
    </com.liangxun.yuejiula.widget.ReboundScrollView>
</LinearLayout>