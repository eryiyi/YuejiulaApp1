<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!-- head开始 -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@drawable/global_top_background"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/mine_record_xml_menu"
                android:paddingLeft="10dp"
                android:src="@drawable/back"
                android:paddingRight="10dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="开通商家"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:id="@+id/title"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:id="@+id/mine_good_add"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/publish_comment_run"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/foot_font_color_pressed"
                    android:layout_marginRight="10dp"
                    android:text="保存"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center|left"
                  android:padding="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_height="wrap_content">
        <com.liangxun.yuejiula.widget.CircleImageView
                android:layout_width="50dp"
                android:id="@+id/cover"
                android:src="@drawable/head"
                android:layout_height="50dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="张三"
                  android:id="@+id/nickname"
                  android:layout_marginLeft="10dp"
                  android:textColor="@color/textColor"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e9e9e9"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="10dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="学校"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:textColor="@color/main"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="开关"
                  android:gravity="center"
                  android:textColor="@color/main"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="到期时间"
                  android:gravity="center"
                  android:textColor="@color/main"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e9e9e9"/>
    <ListView
            android:id="@+id/mine_lstv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/divider_color"
            android:dividerHeight="0.5dp"/>
</LinearLayout>