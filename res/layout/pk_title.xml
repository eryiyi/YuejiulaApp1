<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@drawable/global_top_background"
            android:gravity="center_vertical"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/pk_title_back"
                android:paddingLeft="10dp"
                android:src="@drawable/back"
                android:paddingRight="10dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="参赛规则"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:id="@+id/pk_new_title"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="我要参赛"
                  android:textColor="@color/nickname_color"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:padding="10dp"
                  android:textSize="14sp"
                  android:id="@+id/pk_title_add_one"/>
    </RelativeLayout>

    <com.liangxun.yuejiula.widget.ReboundScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <LinearLayout android:layout_width="match_parent"
                      android:padding="8dp"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:gravity="center"
                          android:id="@+id/searchnull"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:text="暂无主题"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:textColor="@color/textColor"
                      android:textStyle="bold"
                      android:textSize="18sp"
                      android:gravity="center"
                      android:text="111"
                      android:padding="8dp"
                      android:id="@+id/pk_title_title"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="【活动主题】"
                          android:textSize="16dp"
                          android:textColor="@color/textColor"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:id="@+id/pk_title_mudi"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="【活动时间】"
                          android:textSize="16dp"
                          android:textColor="@color/textColor"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:id="@+id/pk_title_time"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="【活动前言】"
                          android:textSize="16dp"
                          android:textColor="@color/textColor"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:id="@+id/pk_title_cont"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView android:layout_width="match_parent"
                       android:id="@+id/pk_title_pic"
                       android:scaleType="centerCrop"
                       android:padding="5dp"
                       android:layout_gravity="center"
                       android:layout_height="wrap_content"/>
            <View android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_marginTop="5dp"
                  android:background="#e9e9e9"/>
            <TextView android:layout_width="match_parent"
                      android:text="奖品区"
                      android:textSize="18sp"
                      android:gravity="center"
                      android:padding="5dp"
                      android:textStyle="bold"
                      android:textColor="@color/textColor"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:id="@+id/prize_all"
                          android:padding="5dp"
                          android:layout_marginTop="5dp"
                          android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:text="【活动奖品-- "
                              android:textSize="16dp"
                              android:textColor="@color/viewfinder_laser"
                              android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="150dp"
                               android:layout_height="40dp"
                               android:src="@drawable/jianghu"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="】"
                              android:textSize="16dp"
                              android:textColor="@color/viewfinder_laser"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:layout_marginTop="5dp"
                          android:id="@+id/pk_title_prize_textone"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="match_parent"
                           android:layout_marginBottom="5dp"
                           android:paddingLeft="5dp"
                           android:paddingRight="5dp"
                           android:layout_gravity="center"
                           android:scaleType="center"
                           android:id="@+id/pk_title_prize_imgone"
                           android:layout_height="wrap_content"/>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:layout_marginTop="5dp"
                  android:background="#e9e9e9"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/pk_title_prize_texttwo_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:text="【活动奖品-- "
                              android:textSize="16dp"
                              android:textColor="@color/viewfinder_laser"
                              android:layout_height="wrap_content"/>
                    <ImageView android:layout_width="150dp"
                               android:layout_height="40dp"
                               android:src="@drawable/xuexiao"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="】"
                              android:textSize="16dp"
                              android:textColor="@color/viewfinder_laser"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView android:layout_width="wrap_content"
                          android:layout_marginLeft="10dp"
                          android:layout_marginTop="5dp"
                          android:id="@+id/pk_title_prize_texttwo"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="match_parent"
                           android:src="@drawable/pk_title_back"
                           android:scaleType="centerCrop"
                           android:layout_gravity="center"
                           android:id="@+id/pk_title_prize_imgtwo"
                           android:layout_height="wrap_content"/>
            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:id="@+id/mine_prize_line"
                  android:layout_marginTop="5dp"
                  android:background="#e9e9e9"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                <Button android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:id="@+id/mine_prize"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:text="我是代理商，我来设置奖品>>"
                        android:background="@drawable/pkcansai_bg"
                        android:layout_height="40dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_marginTop="8dp"
                          android:padding="6dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:text="*参赛规则"
                          android:textColor="@color/textColor"
                          android:textSize="14sp"
                          android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="match_parent"
                        android:text="@string/rule_text"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.2"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.liangxun.yuejiula.widget.ReboundScrollView>

</LinearLayout>