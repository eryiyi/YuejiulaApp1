<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:background="@drawable/zhuye_item_select"
        android:layout_height="wrap_content">

    <com.liangxun.yuejiula.widget.CircleImageView
            android:id="@+id/detail_favour_item_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/head"/>

    <TextView android:layout_width="32dp"
              android:id="@+id/favour_count"
              android:background="@drawable/zhezhao"
              android:gravity="center"
              android:textColor="@color/white"
              android:layout_height="32dp"/>
</RelativeLayout>
