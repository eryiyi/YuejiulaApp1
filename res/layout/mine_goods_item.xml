<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@drawable/zhuye_item_select"
              android:layout_height="116dp"
                android:padding="8dp"
              android:orientation="vertical">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:id="@+id/goods_item_pic"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:textSize="16sp"
                android:padding="8dp"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/goods_item_pic"
                android:text="这里是商品的这里是商品的撒地这里是商品的撒地方大师傅方大师傅这里是商品的撒地方大师傅这里是商品的撒地方大师傅这里是商品的撒地方大师傅撒地方大师傅"
                android:textColor="@color/black_text_color"
                android:id="@+id/goods_item_title"/>

        <TextView android:layout_width="wrap_content"
                  android:text="￥7800000000"
                  android:gravity="center"
                  android:padding="3dp"
                  android:textSize="16sp"
                  android:layout_marginLeft="6dp"
                  android:layout_toRightOf="@+id/goods_item_pic"
                  android:layout_below="@+id/goods_item_title"
                  android:id="@+id/goods_item_money"
                  android:textColor="@color/viewfinder_laser"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="￥7800000000"
                  android:gravity="center"
                  android:padding="3dp"
                  android:textSize="14sp"
                  android:layout_marginLeft="6dp"
                  android:layout_toRightOf="@+id/goods_item_money"
                  android:layout_below="@+id/goods_item_title"
                  android:id="@+id/goods_item_money_market"
                  android:textColor="@color/viewfinder_laser"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="12小时前"
                  android:singleLine="true"
                  android:layout_below="@+id/goods_item_title"
                  android:layout_alignParentRight="true"
                  android:textSize="12sp"
                  android:paddingLeft="2dp"
                  android:id="@+id/goods_item_dateline"/>

</RelativeLayout>
