<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@drawable/global_top_background"
            android:gravity="center_vertical"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/pk_title_back"
                android:paddingLeft="10dp"
                android:src="@drawable/back"
                android:paddingRight="10dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/title_font_main"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="往期Pk"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:id="@+id/pk_new_title"
                />
        <!--<TextView  android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:text="我要参赛"-->
        <!--android:textColor="@color/btn_blue_normal"-->
        <!--android:gravity="center"-->
        <!--android:paddingRight="10dp"-->
        <!--android:id="@+id/pk_title_add"/>-->
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_bule_bg"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/soubtn"
                android:id="@+id/searchImageView"/>
        <EditText
                android:id="@+id/searchText"
                android:layout_weight="1"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入查询的用户名"
                android:singleLine="true"
                android:background="@null"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qingchu"
                android:id="@+id/deleteContSearch"/>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="match_parent"
                   android:src="@drawable/collect_no_good"
                   android:id="@+id/search_null"
                   android:visibility="gone"
                   android:layout_centerInParent="true"
                   android:layout_height="wrap_content"/>
        <com.liangxun.yuejiula.library.PullToRefreshListView
                android:id="@+id/pk_new_lstv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:divider="#e9e9e9"
                android:dividerHeight="0.5dp"
                android:fadingEdge="none"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:smoothScrollbar="true"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:background="#ffffff">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:paddingTop="5dp"
                   android:onClick="onFootMenuPopupButtonClick"
                   android:src="@drawable/icons_others_slideup"/>
    </LinearLayout>
</LinearLayout>