<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              >
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
                    android:paddingTop="12dp"
                    android:id="@+id/relative_video"
                    android:layout_height="200dp">
        <ImageView
                android:id="@+id/img_video"
                android:layout_width="match_parent"
                android:src="@drawable/pic_none"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:minHeight="200dp"
                android:layout_centerHorizontal="true"/>
        <ImageView
                android:id="@+id/img_video_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_home_play"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
        <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

            <TextView
                    android:id="@+id/article_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:layout_marginRight="5dp"
                    android:textColor="#ffffff"/>

            <LinearLayout
                    android:id="@+id/viewGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp">
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!-- 主体 -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <View android:layout_width="match_parent"
              android:background="@color/gray"
              android:layout_height="0.5dp"></View>
        <TextView android:layout_width="match_parent"
                  android:padding="8dp"
                  android:textColor="@color/textColor"
                  android:textSize="18sp"
                  android:id="@+id/title"
                  android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

            <com.liangxun.yuejiula.widget.CircleImageView
                    android:layout_width="45dp"
                    android:id="@+id/head"
                    android:src="@drawable/head"
                    android:layout_height="45dp"/>
            <TextView android:layout_width="wrap_content"
                      android:textSize="16sp"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="5dp"
                      android:layout_toRightOf="@+id/head"
                      android:textColor="@color/blue"
                      android:id="@+id/nickname"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="数量：100"
                      android:textColor="@color/textColor"
                      android:id="@+id/shuliang"
                      android:visibility="gone"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="5dp"
                      android:layout_toRightOf="@+id/head"
                      android:layout_below="@+id/nickname"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="咨询卖家"
                      android:layout_marginRight="8dp"
                      android:layout_alignParentRight="true"
                      android:padding="8dp"
                      android:id="@+id/zixun"
                      android:textColor="@color/white"
                      android:background="@drawable/btn_blue_shap"
                      android:layout_height="wrap_content"/>
    </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:padding="8dp"
                    android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/red"
                          android:textSize="16sp"
                          android:id="@+id/money_one"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/red"
                          android:textSize="14sp"
                          android:layout_marginLeft="8dp"
                          android:id="@+id/money_two"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/red"
                          android:textSize="14sp"
                          android:visibility="gone"
                          android:layout_marginLeft="8dp"
                          android:id="@+id/money_three"
                          android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/content"
                  android:padding="8dp"
                  android:textColor="@color/textColor"
                  android:textSize="16sp"
                  android:lineSpacingMultiplier="1.4"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    </LinearLayout>
</ScrollView>