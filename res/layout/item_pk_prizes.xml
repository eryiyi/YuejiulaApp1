<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:orientation="vertical"
              android:background="@drawable/zhuye_item_select">
    <LinearLayout android:layout_width="match_parent"
                  android:padding="8dp"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:textSize="16sp"
                  android:text="第一期"
                  android:gravity="center|left"
                  android:id="@+id/item_prize_number"
                  android:layout_weight="1"
                  android:textColor="@color/textColor"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="清华大学"
                  android:id="@+id/item_prize_college"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:gravity="center"
                  android:textColor="@color/textColor"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="3天前"
                  android:id="@+id/item_prize_dateline"
                  android:textSize="13sp"
                  android:gravity="center|right"
                  android:layout_weight="1"
                  android:textColor="@color/textColortwo"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:id="@+id/item_prize_cover"/>
                <TextView android:layout_width="wrap_content"
                          android:lineSpacingExtra="6dp"
                          android:gravity="bottom"
                          android:padding="6dp"
                          android:id="@+id/item_prize_cont"
                          android:textSize="15sp"
                          android:layout_below="@+id/item_prize_cover"
                          android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
                          android:textColor="@color/textColor"
                          android:layout_height="wrap_content"/>
               <ImageView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center|right"
                          android:padding="8dp"
                          android:layout_alignParentRight="true"
                          android:layout_below="@+id/item_prize_cont"
                          android:src="@drawable/icon_little_h_trash"
                          android:id="@+id/item_delete"/>
    </RelativeLayout>
</LinearLayout>



